<section class="w-full min-h-screen bg-black flex flex-col items-center animate-fadeIn">
  <header class="w-full px-4 sm:px-6 lg:px-8 bg-gray-900 text-white py-4">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold">Market: <%= @market.name %></h1>
    </div>
  </header>

  <div class="w-full max-w-4xl p-4 space-y-6">
    <section class="bg-gray-800 rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-bold text-white mb-4">Place a Bet</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        
        <!-- Lay Bet Form -->
        <form action="/bets/create_bet" method="POST" class="bg-gray-700 p-6 rounded-lg shadow-lg flex flex-col">
          <input type="hidden" name="_csrf_token" value={@csrf_token}>
          <input type="hidden" name="market_id" value={@market_id}>
          <input type="hidden" name="type" value="lay">
          <input type="hidden" name="user_id" value={1}>
          <div class="mb-4">
            <label for="lay_amount" class="block text-white mb-2">Amount:</label>
            <input type="number" id="lay_amount" name="amount" value="10.00" step="0.01" min="0" class="bg-gray-600 text-white p-2 rounded w-full" required>
          </div>
          <div class="mb-4">
            <label for="lay_odds" class="block text-white mb-2">Odds:</label>
            <input type="number" id="lay_odds" name="odds" value="1.00" step="0.01" min="0" class="bg-gray-600 text-white p-2 rounded w-full" required>
          </div>
          <button type="submit" class="mt-auto bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Place Lay Bet
          </button>
        </form>

        <!-- Back Bet Form -->
        <form action="/bets/create_bet" method="POST" class="bg-gray-700 p-6 rounded-lg shadow-lg flex flex-col">
          <input type="hidden" name="_csrf_token" value={@csrf_token}>
          <input type="hidden" name="market_id" value={@market_id}>
          <input type="hidden" name="type" value="back">
          <input type="hidden" name="user_id" value={1}>
          <div class="mb-4">
            <label for="back_amount" class="block text-white mb-2">Amount:</label>
            <input type="number" id="back_amount" value="10.00" name="amount" step="0.01" min="0" class="bg-gray-600 text-white p-2 rounded w-full" required>
          </div>
          <div class="mb-4">
            <label for="back_odds" class="block text-white mb-2">Odds:</label>
            <input type="number" id="back_odds" value="1.00" name="odds" step="0.01" min="0" class="bg-gray-600 text-white p-2 rounded w-full" required>
          </div>
          <button type="submit" class="mt-auto bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            Place Back Bet
          </button>
        </form>
      </div>
    </section>
  </div>
</section>
